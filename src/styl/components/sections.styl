//- SECTIONS ----------------------------------------------- //

.siteSection
  min-width: 240px
  padding: 100px 30px 100px
  position: relative

  &.links-drk
    a
      color: rgba(52,52,52,.7)

  &.links-light
    color: $white

    a
      color: rgba(255,255,255,.7)

  &:before, &:after
    {$pseudo}
    left: 50%

.siteContent
  max-width: 900px
  margin: 0 auto
  position: relative
  font-size: 18px
  line-height: 24px

  @media $screen-medium
    font-size: 22px
    line-height: 30px