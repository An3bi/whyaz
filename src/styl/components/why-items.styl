//- WHY ITEMS ----------------------------------------------- //

.why
  padding: 200px 40px 60px
  position: relative

  @media $screen-xsmall
    padding-left: 25px
    padding-right: 25px

  p
    max-width: 310px
    margin: 0 auto

  .flag-one
    top: 10px
    margin-left: -150px
    transform: scale(.5)
    border-radius: 8px
    box-shadow: 10px 10px $shadow

  .inline-list
    max-width: 900px
    margin: 30px auto 0

    li
      margin: 10px
      display: inline-block
      font-size: 15px

    a
      opacity: .7
      background: none

      &:hover
        opacity: 1

    li + p
      margin-top: 30px
      margin-bottom: 20px