//- FORM STYLES ----------------------------------------------- //

form
  text-align: left


  label
    padding-left: 5px
    display: block
    font-family: $font-family-brandon
    font-weight: $font-weight-bold
    font-size: 13px
    text-transform: uppercase

  input, textarea
    box-sizing: border-box
    width: 100%
    margin-bottom: 20px
    padding: 10px
    border: 1px solid $shadow
    border-radius: 3px
    font-family: $font-family-tisa
    font-size: 16px

  .button
    width: 100%
    margin-top: 10px