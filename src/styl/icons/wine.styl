//- WINE ----------------------------------------------- //

//- neck
.wine
  width: 18px
  height: 50px
  margin-left: -(@width/2)
  top: 35px
  background: $half-shadow,
              linear-gradient(to bottom, $red 40%, $tan 40%)
  border-radius: 3px
  box-shadow: $shadow-short

  //- bottle body
  &:before
    width: 50px
    height: 90px
    margin-left: -(@width/2)
    top: 40px
    background: $half-shadow,
                linear-gradient(to bottom, $tan 30%,
                                           white 30%,
                                           white 70%,
                                           $tan 70%)
    border-radius: 30px 30px 5px 5px
    box-shadow: $shadow-short
