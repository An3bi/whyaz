//- ARCOSANTI ----------------------------------------------- //

//- dome spikes
.arcosanti
  width: 180px
  height: 108px
  margin-left: -(@width/2)
  top: 60px
  background-image: linear-gradient(to right, transparent 45%,
                                              $grey-c 45%,
                                              $grey-c 55%,
                                              transparent 55%),
                    linear-gradient(40deg, transparent 30%,
                                              $grey-c 30%,
                                              $grey-c 40%,
                                              transparent 40%),
                    linear-gradient(-40deg, transparent 30%,
                                              $grey-c 30%,
                                              $grey-c 40%,
                                              transparent 40%)
  border-radius: 90px 90px 0 0

  //- dome
  &:before
    width: 160px
    height: 100px
    margin-left: -(@width/2)
    top: 8px
    background: tan
    background-image: linear-gradient(to bottom, transparent 30px,
                                                 white(.2) 30px,
                                                 white(.2) 33px,
                                                 $shadow 33px,
                                                 $shadow 34px,
                                                 transparent 34px ),
                      repeating-linear-gradient(90deg, transparent,
                                                       transparent 18px,
                                                       white(.2) 18px,
                                                       white(.2) 21px,
                                                       $shadow 21px,
                                                       $shadow 22px),
                      radial-gradient(circle at 10px 55px, $red-light 5px, transparent 5px),
                      radial-gradient(circle at 31px 58px, $red-light 5px, transparent 5px),
                      radial-gradient(circle at 53px 60px, $red-light 5px, transparent 5px),
                      radial-gradient(circle at 75px 60px, $red-light 5px, transparent 5px),
                      radial-gradient(circle at 97px 58px, $red-light 5px, transparent 5px),
                      radial-gradient(circle at 118px 55px, $red-light 5px, transparent 5px)
    border-radius: 80px 80px 0 0
    border: 15px solid $grey-c
    border-bottom: none
    box-shadow: inset 0 20px 0 $shadow,
                $shadow-short

  //- top piece
  &:after
    width: 36px
    height: 12px
    margin-left: -(@width/2)
    top: -11px
    background: $grey-c