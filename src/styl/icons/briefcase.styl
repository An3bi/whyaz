//- BRIEFCASE ----------------------------------------------- //

.briefcase
  width: 140px
  height: 94px
  margin-left: -(@width/2)
  top: 60px
  background: $brown
  border-radius: 2px 2px 10px 10px
  box-shadow: $shadow-short,
              inset -100px 5px 0 -30px black(.1),
              inset 0 -28px 0 $brown-drk,
              inset 0 -35px 0 black(.08),
              inset 0 -35px 0 $brown-drk

  // straps + half coloring
  &:before
    width: 140px
    height: 98px
    left: 0
    background-repeat: no-repeat
    background-image: linear-gradient(to bottom, silver, silver),
                      linear-gradient(to bottom, $brown-light, $brown-light),
                      linear-gradient(to right, $brown-drk, $brown-drk),
                      linear-gradient(to right, black(.2), black(.2)),
                      linear-gradient(to bottom, silver, silver),
                      linear-gradient(to bottom, $brown-light, $brown-light),
                      linear-gradient(to right, $brown-drk, $brown-drk),
                      linear-gradient(to right, black(.2), black(.2))
    background-size: 12% 4%,
                     12% 6%,
                     8% 100%,
                     4% 96%,
                     12% 4%,
                     12% 6%,
                     8% 100%,
                     4% 96%
    background-position: 18.5% 54%,
                         18.5% 75%,
                         20% 0,
                         17% 0,
                         80.5% 54%,
                         80.5% 75%,
                         80% 0,
                         74% 0

  // handle
  &:after
    width: 50px
    height: 10px
    margin-left: -26px
    top: -@height
    border-radius: 30px 30px 0 0
    border: 5px solid $brown
    border-bottom: none
