//- COMMUNITY PAGE ----------------------------------------------- //

.social-feed-container
  width: 100%
  box-sizing: border-box
  padding: 0 20px
  background: $pale-blue

  .social-feed-element
    max-width: 550px
    margin: 30px auto 0
    box-shadow: $shadow-tall

    &:hover
      box-shadow: $shadow-tall

    @media $screen-medium
      margin: 50px auto

    a:hover
      text-decoration: none

    a.pull-left

      &:hover
        border: none

  .twitter

    .content:last-child

      .social-feed-text
        padding-left: 2px
        font-size: 20px
        line-height: 26px

  .read-button
    text-transform: capitalize


