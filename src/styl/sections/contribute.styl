//- CONTRIBUTE PAGE ----------------------------------------------- //

.contributors-list
  margin: 30px auto

  .contributor
    box-sizing: border-box
    width: 20%
    padding: 8px
    float: left

    a
      display: block
      position: relative
      background: none

      img
        width: 100%
        margin: 0
        background: $shadow
        border-radius: 3px
        box-shadow: $shadow-short


